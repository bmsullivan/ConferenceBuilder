extends ../layout

block body
  .container
    h1 Create an Account
    include ../shared/flash
    form.form-horizontal(action='/user/create')
      .form-group
        label.col-sm-2.control-label(for='firstName') First Name
        .col-sm-3
          input.form-control#firstName(type='text', name='firstName')
      .form-group
        label.col-sm-2.control-label(for='lastName') Last Name
        .col-sm-3
          input.form-control#lastName(type='text', name='lastName')
      .form-group
        label.col-sm-2.control-label(for='email') Email
        .col-sm-3
          input.form-control#email(type='email', name='email')
      .form-group
        label.col-sm-2.control-label(for='password') Password
        .col-sm-3
          input.form-control#password(type='text', name='password')
      .form-group
        label.col-sm-2.control-label(for='confirmPassword') Confirm Password
        .col-sm-3
          input.form-control#confirmPassword(type='text', name='confirmPassword')
      .form-group
        .col-sm-offset-2.col-sm-3
          button.btn.btn-default(type='submit') Create Account