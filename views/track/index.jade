extends ../layout
block body
  .container
    h1 Tracks
    include ../shared/flash
    table.table.table-striped
      thead
        tr
          th Id
          th Name
          th
      tbody
        each track in tracks
          tr
            td= track.id
            td= track.name
            td
              a.btn.btn-primary(href='/track/update/' + track.id) Edit
    p
      a.btn.btn-default(href='/track/create') Add New
